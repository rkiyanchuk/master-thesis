\newcommand{\showcontents}{
\begin{frame}{\contentsname}
    \addtocounter{framenumber}{-1} 
    \tableofcontents
\end{frame}
}

\newcommand{\overviewsection}{
    \AtBeginSection[] { 
        \begin{frame}{\contentsname} 
            \addtocounter{framenumber}{-1} 
            \tableofcontents[currentsection] 
        \end{frame} 
    }
} 

\newcommand{\overviewsubsection}{
    \AtBeginSubsection[] { 
        \begin{frame}{\contentsname} 
            \addtocounter{framenumber}{-1} 
            \tableofcontents[currentsubsection] 
        \end{frame} 
    } 
}

